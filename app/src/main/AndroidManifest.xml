<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mad.modernnostalgiav2">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" android:label="@string/login_screen"/>
        <activity android:name=".RegistrationActivity" android:label="@string/registration_screen"/>
        <activity android:name=".AlbumActivity" android:label="@string/album_screen"/>
        <activity android:name=".PhotoActivity" android:label="@string/photo_screen"/>
        <activity android:name=".CameraActivity" android:label="@string/camera_screen"/>
        <activity android:name=".SettingsActivity" android:label="@string/settings_screen"/>

    </application>

</manifest>